extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-3xl.font-extspanrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="nombre") nombre
                        input#nombre.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre" value=usuario ? usuario.nombre : "")
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.mt-2.font-bold(for="email") email de registro
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value=usuario ? usuario.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.mt-2.font-bold(for="password") password
                        input#password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.mt-2.font-bold(for="repetir_password") repite tu password
                        input#repetir_password.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repetir_password")
                    div.flex.items-center.justify-between
                        a.text-grey-500.text-sm.mt-2(href="/auth/login") Ya tienes cuenta? Inicia sesion 
                        a.text-grey-500.text-sm.mt-2(href="/auth/olvide-password") Olvide mi password 
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 cursor-pointer mt-3 rounded-md" type="submit" value="Crear cuenta")
